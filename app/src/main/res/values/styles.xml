<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="dateTextApperance" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:fontFamily">@font/boldsp</item>
    </style>

    <style name="weekdateTextApperance" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">?attr/hint_color</item>
    </style>

   <style name="all_calendar_style">
       <item name="fontFamily">@font/boldsp</item>
   </style>

    <style name="texts_style_account_save">
        <item name="android:textColor">@color/gray_text</item>
    </style>

    <style name="texts_style_account_edit">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="texts_style_hint_acc">
        <item name="android:textColorHint">@color/gray_text</item>
    </style>

    <style name="settings_buttons">
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@color/red</item>
        <item name="android:fontFamily">@font/boldsp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>

    <style name="myRadioButton" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/red</item>
        <item name="android:colorControlActivated">@color/red</item>
    </style>

    <style name="textEditHandleGreen">
        <item name="colorControlActivated">@color/green</item>
    </style>

    <style name="greenButton">
        <item name="background">@color/green</item>
    </style>

    <style name="text_toolbar" parent="@style/Base.TextAppearance.AppCompat.Title">
        <item name="android:textSize">26dp</item>
        <item name="android:fontFamily">@font/boldsp</item>

        <item name="android:textColor">@color/white</item>
    </style>
</resources>