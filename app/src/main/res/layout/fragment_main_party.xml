<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    tools:context=".MainParty">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/zay"
                android:textColor="?attr/tC"
                android:textSize="24dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_marginTop="5dp"
                android:layout_centerHorizontal="true"
                android:text="@string/zayavka" />


    <TableLayout
        android:layout_width="match_parent"

        android:layout_below="@+id/zay"
        android:layout_marginHorizontal="35dp"
        android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:textColor="?attr/tC"
        android:fontFamily="@font/boldsp"
        android:text="@string/regOtd"/>


       <Spinner
           android:id="@+id/spinnerReg"
           android:gravity="left|center"
           android:singleLine="true"
            android:stateListAnimator="@drawable/spinner_sla"
           android:dropDownVerticalOffset="55dp"
           android:background="@drawable/spinner_bg"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:textColor="?attr/tC"
            android:fontFamily="@font/boldsp"
            android:text="@string/mestOtd"/>


        <Spinner
            android:id="@+id/spinnerOtd"
            android:gravity="left|center"
            android:singleLine="true"

            android:stateListAnimator="@drawable/spinner_sla"
            android:dropDownVerticalOffset="55dp"
            android:background="@drawable/spinner_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:textColor="?attr/tC"
            android:fontFamily="@font/boldsp"
            android:text="@string/FIO"/>


       <EditText
           android:id="@+id/fio"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textColor="@color/red"
           android:textSize="20dp"
           android:inputType="text"
           android:theme="@style/textEditHandleGreen"

           android:singleLine="true"
           android:background="@drawable/edit_text_zayavka"
           android:paddingVertical="15dp"
           android:paddingLeft="15dp"
           />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:textColor="?attr/tC"
            android:fontFamily="@font/boldsp"
            android:text="@string/telNumber"/>


        <EditText
            android:id="@+id/tel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:textSize="20dp"
            android:inputType="phone"
            android:theme="@style/textEditHandleGreen"
            android:singleLine="true"
            android:background="@drawable/edit_text_zayavka"
            android:paddingVertical="15dp"
            android:paddingLeft="15dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:textColor="?attr/tC"
            android:fontFamily="@font/boldsp"
            android:text="Пол"/>

        <RadioGroup
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/rediogroup"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/rd1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:theme="@style/myRadioButton"
                android:textColor="?attr/tC"
                android:layout_weight="0.5"
                android:text="Мужской"/>
            <RadioButton
                android:id="@+id/rd2"
                android:theme="@style/myRadioButton"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:textColor="?attr/tC"
                android:textSize="18dp"
                android:layout_height="wrap_content"
                android:text="Женский"/>
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:textColor="?attr/tC"
            android:fontFamily="@font/boldsp"
            android:text="Дата рождения"/>




        <com.vicmikhailau.maskededittext.MaskedEditText
            android:id="@+id/date_birth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:textSize="20dp"
            android:inputType="date"
            android:theme="@style/textEditHandleGreen"
            android:singleLine="true"
            android:background="@drawable/edit_text_zayavka"
            android:paddingVertical="15dp"
            android:paddingLeft="15dp"

            app:mask="##.##.####"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:textColor="?attr/tC"
            android:fontFamily="@font/boldsp"
            android:text="Гражданство"/>


        <EditText
            android:id="@+id/grazd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:textSize="20dp"
            android:inputType="text"
            android:theme="@style/textEditHandleGreen"
            android:singleLine="true"
            android:background="@drawable/edit_text_zayavka"
            android:paddingVertical="15dp"
            android:paddingLeft="15dp"
            android:layout_marginBottom="15dp"
            />

        <Button
            android:id="@+id/gr_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Тест"
            android:textColor="@color/white"
            android:fontFamily="@font/boldsp"
            android:textAllCaps="false"
            android:textSize="20dp"
            android:paddingVertical="10dp"
            android:backgroundTint="@color/green"
            />


    </TableLayout>
        </RelativeLayout>
    </ScrollView>
